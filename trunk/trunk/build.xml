<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="dist">
    <property name="lib.dir" location="lib"/>
    <property name="launch4j.dir" location="${lib.dir}/launch4j"/>
    <property name="jar.name" value="rdv.jar"/>

    <taskdef name="launch4j"
             classname="net.sf.launch4j.ant.Launch4jTask"
             classpath="${launch4j.dir}/launch4j.jar:${launch4j.dir}/lib/xstream.jar"/>

    <target name="dist">
        <jar destfile="${jar.name}">
            <zipfileset src="${lib.dir}/tzar.jar"/>
            <zipfileset src="${lib.dir}/babushka.jar"/>
            <manifest>
                <attribute name="Main-Class" value="au.edu.rmit.tzar.commands.Main"/>
            </manifest>
        </jar>
    </target>

    <target name="dist-win-exe">
        <launch4j>
            <config headerType="console" outfile="rdv.exe" jarPath="rdv.jar">
                <jre minVersion="1.6.0" jdkPreference="preferJre">
                    <opt>-Drunnerclass=JythonRunner</opt>
                </jre>
            </config>
        </launch4j>
    </target>
</project>
